{{#if admin}}
  <form action="/update_book/{{book.book_id}}" method="post" ref='uploadForm' encType="multipart/form-data">
    <div class="row">
      <div class="col">
        <img class="card-img-top" src="{{book.book_image}}" alt="Card image cap" style="max-width: 50% !important">
        <br>
        <div class="col-lg-12">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">Image:</span>
            <div class="" style="margin: 5px" hidden>
              <input type="text" name="current_image" value="{{book.book_image}}">
            </div>
            <div class="" style="margin: 5px">
              <input type="file" name="image">
            </div>
          </div>
        </div>
      </div>
      <div class="col">
          <div class="col-lg-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">Name:</span>
              <input type="text" class="form-control" name="name_to_update" value="{{book.book_name}}">
            </div>
          </div>
          <div class="col-lg-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">Yaer:</span>
              <input class="form-control" type="number" name="year_to_update" min="1000" max="2017" value="{{book.book_year}}">
            </div>
          </div>
          <div class="col-lg-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">Type:</span>
              <select class="custom-select" name="type_to_update">
                <option selected value="{{book.type_id}}">Current: {{book.type_name}}</option>
                {{# each type}}
                  <option value="{{this.type_id}}">{{this.type_name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">Category:</span>
              <select class="custom-select" name="category_to_update">
                <option selected value="{{book.category_id}}">Current: {{book.category_name}}</option>
                {{# each category}}
                  <option value="{{this.category_id}}">{{this.category_name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">Publisher:</span>
              <select class="custom-select" name="publisher_to_update">
                <option selected value="{{book.publisher_id}}">Current: {{book.publisher_name}}</option>
                {{# each publisher}}
                  <option value="{{this.publisher_id}}">{{this.publisher_name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">Author:</span>
              <ul class="list-group">
                {{{ list book.author_fullname '/book_author_editor/' book.book_id }}}
              </ul>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">Library:</span>
              <ul class="list-group">
                {{{ list book.libraries '/book_library_editor/' book.book_id }}}
              </ul>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">Rubric:</span>
              <ul class="list-group">
                {{{ list book.rubrics '/book_rubric_editor/' book.book_id }}}
              </ul>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="input-group">
                <input type="submit" class="btn btn-warning" value="Update">
              </form>
              <form action="/delete_book/{{book.book_id}}" method="post">
                <input type="submit" class="btn btn-danger" value="Delete">
              </form>
            </div>
          </div>
        </div>
      </div>
  </form>
{{else}}
  <div class="row">
  <div class="col">
    <img class="card-img-top" src="{{book.book_image}}" alt="Card image cap" style="max-width: 50% !important">
  </div>
  <div class="col">
      <div class="col-lg-12">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Name:</span>
          <input type="text" class="form-control" value="{{book.book_name}}" readonly>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Yaer:</span>
          <input class="form-control" type="text"value="{{book.book_year}}" readonly>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Type:</span>
          <input class="form-control" type="text"value="{{book.type_name}}" readonly>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Category:</span>
          <input class="form-control" type="text" value="{{book.category_name}}" readonly>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Publisher:</span>
          <input class="form-control" type="text"value="{{book.publisher_name}}" readonly>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Author:</span>
          <ul class="list-group">
            {{{ userList book.author_fullname }}}
          </ul>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Library:</span>
          <ul class="list-group">
            {{{ userList book.libraries }}}
          </ul>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Rubric:</span>
          <ul class="list-group">
            {{{ userList book.rubrics }}}
          </ul>
          </div>
      </div>
      </div>
</div>
{{/if}}

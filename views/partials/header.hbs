<div class="row">
  <a href="/" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Home</a>
  <form class="" action="/search" method="post" accept-charset="utf-8">
    <div class="col-lg-12">
      <div class="input-group input-group-lg">
        <ul class="list-group">
          <li class="list-group-item">
            <input type="radio" name="table" value="library"> Library<br>
          </li>
          <li class="list-group-item">
            <input type="radio" name="table" value="book"> Book<br>
          </li>
        </ul>
        <input type="text" class="form-control" placeholder="Search for..." name="query">
        <span class="input-group-btn">
          <input type="submit" name="" class="btn btn-success" value="Go!">
        </span>
      </div>
    </div>
  </form>
  {{# if admin}}
    <div class="col-lg-4">
      <form action="/logout" method="post">
        <div class="input-group input-group-lg">
          <span class="input-group-btn">
            <input class="btn btn-success" type="submit" value="Log out">
          </span>
        </div>
      </form>
    </div>
  {{else}}
    <div class="col-lg-4">
      <form action="/sign_in" method="post">
        <div class="input-group input-group-lg">
          <input type="text" class="form-control" placeholder="Admin" name="admin">
          <input type="password" class="form-control" placeholder="Password" name="password">
          <span class="input-group-btn">
            <input class="btn btn-success" type="submit" value="Log in">
          </span>
        </div>
      </form>
    </div>
  {{/if}}
</div>
